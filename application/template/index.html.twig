{% extends "base.html.twig" %}

{% block content %}
    <form class="form-inline my-2 my-lg-0">
      <input class="form-control mr-sm-2" type="search" placeholder="Search" aria-label="Search">
      <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Search</button>
    </form>
{% for annonce in liste %}
<a href="Annonce.php?Annonce.php=1&id={{ annonce.id }}">
<div class="card mb-3" style="max-width: 540px;">
    <div class="row no-gutters">
      <div class="col-md-4">
        <img src="{{annonce.ann_image_url}}../../public/media/logo/motif-popy.png" class="card-img" alt="">
      </div>
      <div class="col-md-8">
        <div class="card-body">
          
          <h5 class="card-title">{{ annonce.ann_titre }}</h5>
          <p class="card-text text-truncate">{{annonce.ann_description}}</p>
          <p class="card-text">{{annonce.ann_prix}}</p>
          
        </div>
      </div>
    </div>
  </div>
  </a>
{% endfor %}
{% endblock content %}
